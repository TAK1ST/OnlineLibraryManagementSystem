<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--servlet config-->
    <servlet>
        <servlet-name>                                                          LoginServlet                                                          </servlet-name>
        <servlet-class>controller.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                          LogoutServlet                                                        </servlet-name>
        <servlet-class>controller.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                          RegisterServlet                                                      </servlet-name>
        <servlet-class>controller.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                          ResetPasswordServlet                                          </servlet-name>
        <servlet-class>controller.auth.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                          ServletURL                                                            </servlet-name>
        <servlet-class>constant.ServletURL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                          ViewURL                                                               </servlet-name>
        <servlet-class>constant.ViewURL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                          AdminDashboard                                                  </servlet-name>
        <servlet-class>controller.admin.AdminDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                        AdminSystemConfig                                              </servlet-name>
        <servlet-class>controller.admin.AdminSystemConfig</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                        AdminUserManagement                                        </servlet-name>
        <servlet-class>controller.admin.AdminUserManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                        AdminBookManagement                                       </servlet-name>
        <servlet-class>controller.admin.AdminBookManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>                                                        AddBookManagement                                          </servlet-name>
        <servlet-class>controller.admin.AddBookManagement</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/admindashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/ResetPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletURL</servlet-name>
        <url-pattern>/ServletURL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewURL</servlet-name>
        <url-pattern>/ViewURL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSystemConfig</servlet-name>
        <url-pattern>/systemconfig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUserManagement</servlet-name>
        <url-pattern>/usermanagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminBookManagement</servlet-name>
        <url-pattern>/bookmanagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookManagement</servlet-name>
        <url-pattern>/addbookmanagement</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
                  30
            </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>view/auth/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
